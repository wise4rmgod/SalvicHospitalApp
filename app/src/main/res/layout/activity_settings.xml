<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Settings">

    <TextView
        android:layout_width="match_parent"
        android:textSize="30sp"
        android:text="Settings"
        android:textAlignment="center"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:hint="Current username"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/numberofpatients"
        android:layout_width="match_parent"
        android:hint="Current number of added patients"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/numberofpatientsallowed"
        android:layout_width="match_parent"
        android:hint="Number of patients allowed"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/savebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"/>
    <Button
        android:id="@+id/clearebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear Data"/>


</LinearLayout>